@model GCTL.Core.ViewModels.Navigations.NavigationSetupViewModel

<div style="padding-top: 10px;">
    <div class="row">
        <div class="col-lg-6">
            <span id="message"></span>
        </div>
        <div class="col-lg-6">
        </div>
    </div>
    <div class="row">
        <input type="hidden" id="lastCode" />
        <input type="hidden" asp-for="AutoId" />
        <input type="hidden" asp-for="Ldate" />
        <input type="hidden" asp-for="ModifyDate" />
        <div class="col-lg-6">
            <label asp-for="MenuId">Menu Id</label>
            <div class="input-group input-group-sm">
                <input asp-for="MenuId" class="form-control form-control-sm js-navigation-code" readonly="readonly" />
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-4">
            <label asp-for="Title"></label>
            <span class="text-danger">*</span>
            <input asp-for="Title" class="form-control form-control-sm js-navigation-check-availabilityx" />
            <span asp-validation-for="Title" class="text-danger" />
        </div>
        <div class="col-lg-4">
            <label asp-for="ParentId"></label>
            <select asp-for="ParentId" class="form-control form-control-sm selectpicker" asp-items="@ViewBag.Parents as SelectList">
                <option value="0">Select Module</option>
            </select>
            <span asp-validation-for="ParentId" class="text-danger"></span>
        </div>
        <div class="col-lg-4">
            <label asp-for="ControllerName">Controller</label>
            <input asp-for="ControllerName" class="form-control form-control-sm" />
            <span asp-validation-for="ControllerName" class="text-danger" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-4">
            <label asp-for="ViewName">Action</label>
            <input asp-for="ViewName" class="form-control form-control-sm" />
            <span asp-validation-for="ViewName" class="text-danger" />
        </div>
        <div class="col-lg-4">
            <label asp-for="Icon">Icon</label>
            <input asp-for="Icon" class="form-control form-control-sm" />
            <span asp-validation-for="Icon" class="text-danger" />
        </div>
        <div class="col-lg-4">
            <label asp-for="OrderBy">Order</label>
            <input asp-for="OrderBy" class="form-control form-control-sm" />
            <span asp-validation-for="OrderBy" class="text-danger" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-4">
            <div class="custom-control custom-checkbox">
                <input asp-for="IsActive" class="custom-control-input" checked="@(Model.AutoId > 0 ? null : "checked")" />
                <label asp-for="IsActive" class="custom-control-label">Is Active?</label>
            </div>
        </div>
    </div>
    <partial name="_Auditing" model="Model" />
</div>
<div class="row no-print" style="margin-top: 9px;">
    <div class="col-12">
        <button type="button" style="border-radius:18px; font-size:12px; border: none; float:right" id="btnSubmit2"
                class="btn-shadow btn-wide btn btn-success waves-effect waves-light js-navigation-save" data-id="@Model.MenuId">
            <span class="btn-icon-wrapper pr-2 opacity-7"><i class="fas fa-plus"></i></span>Save
        </button>
    </div>
</div>