@model GCTL.UI.Core.ViewModels.AccBalancesheet.BalancesheetPageViewModel
@{
    ViewBag.Title = "Balancesheet Statement";
    Model.PageTitle = ViewBag.Title;
    Model.Breadcrumb = "Balancesheet Statement";
}


<!-- Content Header (Page header) -->
<partial name="_PageHeader" model="Model" />

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body p-1">
                        <div class="container-fluid mb-3">
                            <form id="balancesheetStatement-form">
                                <div class="row js-filter">
                                    <div class="col-md-6 mb-1 d-flex d-inline-flex">
                                        <div class="filter-title">Filter By:</div>
                                      
                                       
                                
                                        <div class="filter-item">
                                            <input asp-for="FromDate" class="form-control form-control-sm datepicker datefrom" placeholder="Enter Date From" />
                                            <span asp-validation-for="FromDate" class="text-danger"></span>
                                        </div>
                                        <div class="filter-item">
                                            <input asp-for="ToDate" class="form-control form-control-sm datepicker dateto" placeholder="Enter Date To" />
                                            <span asp-validation-for="ToDate" class="text-danger"></span>
                                        </div>
                               
                                    </div>
                                      <div class="col-md-6">
                                        <div class="d-flex justify-content-end">
                                            <button class="btn btn-default success-btn btn-common btn-circle js-balancesheetStatement-preview mr-2" type="button">
                                                <i class="fas fa-eye">&nbsp;</i> Preview
                                            </button>
                                            <div class="dropdown mr-2">
                                                <button class="btn btn-default success-btn btn-common btn-circle dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                                    <i class="fas fa-file-export"></i> Export
                                                </button>
                                                <div class="dropdown-menu">
                                                    <button class="dropdown-item js-balancesheetStatement-export" data-rendertype="PDF" type="button">
                                                        <i class="fas fa-file-pdf"></i> PDF
                                                    </button>
                                                    <button class="dropdown-item js-balancesheetStatement-export" data-rendertype="Excel" type="button">
                                                        <i class="fas fa-file-excel"></i> Excel
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row no-print" style="margin-top: 9px;">
                                  
                                </div>
                            </form>
                        </div>
                        <div class="container-fluid mb-3">
                            <div class="js-balancesheetStatement-grid-container" style="min-height:450px !important">
                                <object id="js-balancesheetStatement-previewer" type="application/pdf" width="100%" height="620"></object>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <partial name="_BottomNavigation" />
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/pages/balancesheetStatement.js?v=1.0.0"></script>
    <script type="text/javascript">
        var options = {
            baseUrl: '@Url.Action("", "Balancesheet")',
        };
        options.load = () => {
        };

        $.balancesheetStatement(options);
    </script>
}

